{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Елементи</h1>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Име</label>
            <div class="col-sm-10">
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Атрибут</label>
            <div class="col-sm-10">
                {{ form_widget(form.attributeName, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Цвят</label>
            <div class="col-sm-10">
                {{ form_widget(form.primaryColor, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Запази</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
