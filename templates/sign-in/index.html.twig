{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="section">
            <form action="{{ path('app.login.check') }}" method="post" class="login-form" class="g-py-15">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="field">
                    <p class="control has-icons-left has-icons-right">
                        <input name="_username" class="input" type="text" placeholder="Име">
                        <span class="icon is-small is-left"><i class="fas fa-user"></i></span>
                    </p>
                </div>
                <div class="field">
                    <p class="control has-icons-left">
                        <input name="_password" class="input" type="password" placeholder="Парола">
                        <span class="icon is-small is-left"><i class="fas fa-lock"></i></span>
                    </p>
                </div>

                <a class="button is-warning mtb10"
                   id="submit-button"
                   onclick="loginCtrl.login()">Вход</a>
                
            </form>
        </div>
    </div>

{% endblock %}
