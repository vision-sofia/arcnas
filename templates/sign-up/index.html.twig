{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="mt-4 mb-3">Регистрация</h1>

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            Начало
        </li>
    </ol>

    <div class="row">
        <div class="col-lg-5 offset-3">
            {{ form_start(form, {'attr': {'class': '', 'novalidate': 'novalidate'}}) }}
                <div class="form-group row">
                    <label class="col-sm-5 col-form-label">Потребителско име</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.username, {'attr': {'placeholder': 'Потребителско име', 'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-5 col-form-label">Парола</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.plainPassword.first, {'attr': {'placeholder': 'Парола', 'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-5 col-form-label">Повторете паролата</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.plainPassword.second, {'attr': {'placeholder': 'Повторете паролата', 'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-7 offset-5">
                        <button type="submit" class="btn btn-primary">Регистрация</button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
